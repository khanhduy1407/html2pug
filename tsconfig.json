{
	"compilerOptions": {
		"target": "ES2020",
		"lib": [
			"ES2020"
		],
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"composite": true,
		"declaration": true,
		"strict": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"baseUrl": "./",
		"outDir": "out",
		"rootDir": "src",
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules"
	],
}